<% include ../header.ejs %>

    <form action="" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
    <table class="table table-bordered">
        <tr>
            <th>제목</th>
            <td><input type="text" name="title" class="form-control" value="<%=post.title%>" /></td>
        </tr>
        <tr>
            <th>내용</th>
            <td><input type="text" name="content" class="form-control" value="<%=post.content%>" /></td>
        </tr>
        <tr>
        <th>섬네일</th>
            <td>
                <input type="file" name="thumbnail" />
                <% if(post.thumbnail){ %>
                <a href="/uploads/<%=post.thumbnail%>" target="_blank">업로드 이미지 보기</a>
                <% } %>
            </td>
        </tr>
    </table>
    <div>
        <button class="btn btn-default">작성하기</button>
    </div>
    </form>

<% include ../footer.ejs %>